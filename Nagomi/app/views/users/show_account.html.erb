<link href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" rel="stylesheet">
<div class="show-account-body">
  <h1 class="show-account-title"><i class="far fa-user"></i>&ensp;マイアカウント</h1>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <table class="table table-bordered">
          <tr>
            <th class="col-md-4", height="50">名前</th>
            <td class="show-account"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="col-md-4", height="50">性別</th>
            <td class="show-account"><%= @user.sex %></td>
          </tr>
          <tr>
            <th class="col-md-4", height="50">Gメールアドレス</th>
            <td class="show-account"><%= @user.email %></td>
          </tr>
          <tr>
            <th class="col-md-4", height="50">電話番号</th>
            <td class="show-account"><%= @user.phone_number %></td>
          </tr>
          <tr>
            <th class="col-md-4", height="50">LINE_ID</th>
            <td class="show-account"><%= @user.line_id %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="account-btn">
      <%= link_to "アカウント情報の変更", edit_user_registration_path, class: "btn-gradient-3d-simple" %>
    </div>
</div>