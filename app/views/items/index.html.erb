

  <div class="container-fluid jumbotron-position">
      <h1 class="new-title">作業見積り</h1>
        <div class="col-md-6 col-md-offset-3">
        
          <%= form_for([@item, @cart_item], url: add_item_item_path(@items), method: :post) do |f| %>
          <% @items.each do |item| %>
            
            <div class="form-group">
              <%= f.label :作業内容, class: "label-tool--new"%>
              <%= item.name %>
            </div>
            <div class="form-group">
              <%= f.label :価格, class: "label-tool--new" %> 
              <%= item.price %>
            </div>
            
            
            <%= f.submit "見積りカートに入れる", class:  "btn btn--blue btn--cubic btn--shadow" %>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>