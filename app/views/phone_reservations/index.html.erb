<div class="calendar">
  <table class="table table-bordered">
    <thead>
      <tr>
        <% if Date.today == @first_day %>
          <th style="width: 8%" rowspan="2"><p class="week">前の2週間</p></th>
        <% else %>
          <th style="width: 8%" rowspan="2"><p class="week"><%= link_to "前の1週間", phone_reservations_path(date: @first_day.ago(14.days)), class: "week-prev" %></p></th>
        <% end %>
          <th colspan="14"><%= l(Date.today, format: :long) %></th>
          <th style="width: 8%" rowspan="2"><p class="week"><%= link_to "次の2週間", phone_reservations_path(date: @first_day.since(14.days)), class: "week-next"%></p></th>
      </tr>
      <% @two_weeks.each do |day| %> 
        <th class="day-cell">
          <%= l day ,format: :short %><br>
        </th>
      <% end %>
    </thead>
    <tbody>
      <tr>
        <td>11:00</td>
      </tr>
      <tr>
        <td>12:00</td>
      </tr>
      <tr>
        <td>13:00</td>
      </tr>
      <tr>
        <td>14:00</td>
      </tr>
      <tr>
        <td>15:00</td>
      </tr>
      <tr>
        <td>16:00</td>
      </tr>
      <tr>
        <td>17:00</td>
      </tr>
      <% @day_time.each do |time| %>
        <tr>
          <% @ids.each do |id| %>
            <td><%= link_to valid(id,time) , edit_phone_reservation_path(id,time:time), remote: true, class: "mark" %></td>
          <% end %>
        </tr>
      <% end %>  
      <tr>
        <td>11:00</td>
      </tr>
      <tr>
        <td>12:00</td>
      </tr>
      <tr>
        <td>13:00</td>
      </tr>
      <tr>
        <td>14:00</td>
      </tr>
      <tr>
        <td>15:00</td>
      </tr>
      <tr>
        <td>16:00</td>
      </tr>
      <tr>
        <td>17:00</td>
      </tr>
    </tbody>
  </table>
</div>

