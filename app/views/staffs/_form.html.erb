<%= form_with(model: @staff, local: true) do |f| %>

  <%= render 'share/error_messages', object: @staff %> 

  <%= f.label :staff_number, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :staff_number, class: "form-control" %>

  <%= f.label :name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :kana, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :kana, class: "form-control" %>

  <div class="field">
    <%= f.label :性別 %> <br />
    <%= f.radio_button :sex, "男" %>男 <%= f.radio_button :sex, "女" %>女
  </div>

  <%= f.label :email, class: "label-#{yield(:class_text)}" %>
  <%= f.email_field :email, class: "form-control" %>

  <div class="field">
    <%= f.label :住所 %> <br />
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <%= f.label :phone_number, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :phone_number, class: "form-control" %>

  <%= f.label :password, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :再パスワード, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>