<div class="container-devise">
  <div class="jumbotron-devise">
    <h2>パスワードの変更</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "staffs/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "新しいパスワード" %><br />
        <% if @minimum_password_length %>
          <em>(最低&nbsp;<%= @minimum_password_length %>&nbsp;文字)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true,
                           class: 'form-control',
                           required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "新しいパスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, 
                            autocomplete: "new-password",
                            class: 'form-control',
                            required: true %>
      </div>

      <div class="form-group">
        <%= f.submit "パスワード更新", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "staffs/shared/links" %>
  </div>
</div>
