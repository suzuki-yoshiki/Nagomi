<% provide(:title, "new") %>
<% provide(:class_text, 'staff--new') %>
<% provide(:button_text, '登録') %>
<h1 class="index-title-post">スタッフの新規登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 <%= render "staffs/shared/error_messages", resource: resource %> 

  <div class="field">
    <%= f.label :社員番号 %> 
    <%= f.text_field :staff_number,class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :名前 %> <span class="must">必須</span><br />
    <%= f.text_field :name, :required => true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :ふりがな %> <span class="must">必須</span><br />
    <%= f.text_field :kana, :required => true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :性別 %> <span class="must">必須</span><br />
    <%= f.radio_button :sex, "男", :required => true %>男 <%= f.radio_button :sex, "女", :required => true %>女
  </div>

  <div class="field">
    <%= f.label :Gメールアドレス %><span class="must">必須</span><br />
    <%= f.email_field :email, :required => true,  class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :住所 %> <span class="must">必須</span><br />
    <%= f.text_field :address, :required => true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %> <span class="must">必須</span> <br />
    <%= f.text_field :phone_number, :required => true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :Line_ID %> 
    <%= f.text_field :line_id, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :パスワード %> <span class="must">必須</span>
    <% if @minimum_password_length %>
    <em>(最小<%= @minimum_password_length %>文字)</em>
    <% end %><br />
    <%= f.password_field :password, :required => true,class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %> <span class="must">必須</span><br />
    <%= f.password_field :password_confirmation, :required => true,  class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "btn btn-primary btn-block btn-login" %>
  </div>
<% end %>

<%= render "staffs/shared/links" %>
