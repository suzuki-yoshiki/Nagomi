<% provide(:title, @staff.name) %>
<link href="https://fonts.googleapis.com/css2?family=Sawarabi+Gothic&display=swap" rel="stylesheet">  
<div class="staff-show-body">
  <div class="container">
    <h1 class="staff-show-title">社員詳細ページ</h1>
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <table border="2" style="border-collapse: collapse; border-color: black">
            <tr>
              <th height="40" class=col-md-2>社員番号</th><td class=col-md-4><%= @staff.staff_number %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>名前</th><td class=col-md-4><%= @staff.name %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>カナ</th><td class=col-md-4><%= @staff.kana %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>性別</th><td class=col-md-4><%= @staff.sex %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>年齢</th><td class=col-md-4><%= @staff.age %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>住所</th><td class=col-md-4><%= @staff.address %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>TEL</th><td class=col-md-4><%= @staff.phone_number %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>LINE_ID</th><td class=col-md-4><%= @staff.line_id %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>メールアドレス</th><td class=col-md-4><%= @staff.email %></td>
            </tr>
          </table>
          <div class="user-show-btn">
            <%= link_to staffs_path, class: "btn btn--blue btn-md btn--shadow" do %>
            <i class="fas fa-reply"> 戻る</i>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>
