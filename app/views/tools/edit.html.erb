<% provide(:title, @tool.tool_name) %>
<link href="https://fonts.googleapis.com/css2?family=Sawarabi+Gothic&display=swap" rel="stylesheet">
  <div class="tool-edit-body">
    <div class="container-fluid jumbotron-position">
      <h1 class="new-title">道具情報編集（作業道具）</h1>
        <div class="col-md-6 col-md-offset-3">
          <%= form_with model: @tool, url: tool_path(@tool) do |t| %>
            <div class="form-group">
              <%= t.label :tool_name, class: "label-tool--new"%> <span class="must">必須</span>
              <%= t.text_field :tool_name, class: "form-control"%>
            </div>
            <div class="form-group">
              <%= t.label :price, class: "label-tool--new" %> <span class="must">必須</span>
              <%= t.text_field :price, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= t.label :tool_count, class: "label-tool--new" %> <span class="must">必須</span>
              <%= t.text_field :tool_count, class: "form-control" %>
            </div>  
            <div class="form-group">
              <%= t.label :tool_explanation, class: "label-tool--new" %>
              <%= t.text_area :tool_explanation, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= t.label :image, class: "label-tool--new" %>
              <%= t.attachment_field :image, class: "input"%>
            </div>
            <%= t.submit "編集する", class:  "btn btn--blue btn--cubic btn--shadow" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>