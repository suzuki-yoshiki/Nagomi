<% provide(:title, 'All Users') %>
<h1>ユーザー一覧</h1>
<div class="col-md-10 col-md-offset-1">
  <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th>ID</th>
        <th>名前</th>
        <th>かな</th>
        <th>性別</th>
        <th>アドレス</th>
        <th>電話番号</th>
        <h1>ユーザー一覧</h1>
      </tr>
    </thead>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.kana %></td>
        <td><%= user.sex %></td>
        <td><%= user.address %></td>
        <td><%= user.phone_number %></td>
      </tr>
    <% end %>
  </table>
</div>