<% provide(:title, "新規予約作成") %>
<h1 class="index-title-post">新規予約作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <div class="wrapper">
    <div class="search-area">
      <form>
        <input type="text" id="search-text" placeholder="お名前検索">
      </form>
      <div class="search-result">
        <div class="search-result__hit-num"></div>
        <div id="search-result__list"></div>
      </div>
    </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-8">
        <p>お客様の名前検索</p>
          <%= form_with(model: @user,  method: :get, local: true) do |form| %>
            <%= text_field_tag :search %>
            <%= submit_tag '検索', :name => nil, class: "btn btn-primary" %>
          <% end %>
    </div>
  </div>
    <table class="table table-bordered">
    <%= will_paginate %>
     <thead>
      <tr>
       <th>名前</th><br/>
       <th></th><br/>
      </tr>
     </thead>

     <tbody class="target-area">
       <% @users.each do |user| %>
        <tr>
         <td><%= user.name %></td>
         <td><%= link_to "新規作成", new_index_work_reservation_user_path(user.id), class: "btn btn-xs btn-primary" %></td>
        </tr>
       <% end %>
     </tbody>
    </table>
   </div>
  </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
