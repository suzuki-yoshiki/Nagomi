<% provide(:title, @user.name) %>
<link href="https://fonts.googleapis.com/css2?family=Sawarabi+Gothic&display=swap" rel="stylesheet">  
<div class="show-body">
  <div class="container">
    <h1 class="show-title">お客様詳細ページ</h1>
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <table border="2" style="border-collapse: collapse; border-color: black">
            <tr>
              <th height="40" class=col-md-2>名前</th><td class=col-md-4><%= @user.name %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>カナ</th><td class=col-md-4><%= @user.kana %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>性別</th><td class=col-md-4><%= @user.sex %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>住所</th><td class=col-md-4><%= @user.address %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>TEL</th><td class=col-md-4><%= @user.phone_number %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>メールアドレス</th><td class=col-md-4><%= @user.email %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>LINE_ID</th><td class=col-md-4><%= @user.line_id %></td>
            </tr>
            <tr>
              <th height="40" class=col-md-2>清掃履歴</th><td class=col-md-4>未実装（検討要）
            </tr>
          </table>
          <div class="user-show-btn">
            <%= link_to users_path, class: "btn btn--blue btn-md btn--shadow" do %>
            <i class="fas fa-reply"> 戻る</i>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>