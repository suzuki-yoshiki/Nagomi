<% provide(:title, 'Video 一覧') %>
<h1>動画一覧</h1>
<div class="container">
  <div class="row" >
    <div class="col-md-8 col-md-offset-2">
      <% @videos.each do |video| %>
        <div class="title">
          <p>タイトル：<%= video.title %></p>
        </div>
        <div class="video">
          <iframe width="750" height="500" src="https://www.youtube.com/embed/<%= video.youtube_url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <div class="botton">
          <td>
            <%= link_to "編集", edit_video_path(video), class: "btn btn-lg btn-primary" %>
          </td>
          <td>
            <%= link_to "削除", video , method: :delete, data: { confirm: "削除してよろしいですか？" }, class: "btn btn-lg btn-danger" %>
          </td>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-8 col-md-offset-2">
    <div class="botton2">
      <td>
        <%= link_to "新規追加", new_video_path, class: "btn btn-lg btn-primary" %>
      </td>
    </div>
  </div>
</div>
