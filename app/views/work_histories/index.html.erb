<% provide(:title, "作業履歴") %>

<h1>WorkHistories#index</h1>
<h1>作業履歴</h1>

     <div class="row">
        <div class="col-md-8 col-md-offset-3">
           <% @work_histories.each do |work_history, user| %>
             <table class="table table-bordered table-condensed">
               <thead>

              </thead>

              <tbody>
                 <tr><th colspan="2">名前</th><td colspan="2"><%= work_history.user.name %></td></tr>
                 <tr><th colspan="2">TEL</th><td colspan="2"><%= work_history.user.phone_number %></td></tr>
                 <tr><th colspan="2">住所</th><td colspan="2"><%= work_history.user.address %></td></tr>
                 <tr><th colspan="2">メイン予約項目</th><td colspan="2">
                 <% if work_history.main_menu.present? %>
                  <%= work_history.main_menu.delete(",[]") %>
                 <% else %>
                 なし
                 <% end %>
                 </td></tr>
                 <tr><th colspan="2">オプション予約項目</th><td colspan="2">
                 <% if work_history.option_menu.present? %>
                  <%= work_history.option_menu.delete(",[]") %>
                 <% else %>
                 なし
                 <% end %>
                 </td></tr>
                 <tr><th colspan="2">作業内容</th><td colspan="2"><%= work_history.reservation_work %></td></tr>
                 <tr><th colspan="2">訪問日</th><td colspan="2"><%= work_history.worked_on.to_s(:date) %></td></tr>
                 <tr><th colspan="2">作業開始時間</th><td colspan="2"><%= work_history.start_times.to_s(:hour) %>時<%= work_history.start_times.to_s(:min) %>分</td></tr>
                 <tr><th colspan="2"></th><td colspan="2"><%= link_to "削除", work_history, method: :delete, data: { confirm: "削除してよろしいですか？" }, class: "btn btn-danger" %></td></tr>
              </tbody>
             </table>
           <% end %>
        </div>
      </div>