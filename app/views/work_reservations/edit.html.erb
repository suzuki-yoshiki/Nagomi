<h1>WorkReservations#edit</h1>
<h1>予約状況編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @work_reservation, url: work_reservation_path(@work_reservation), local: true, method: :patch) do |f| %>

      <%= f.label :メイン予約項目, class: "label-#{yield(:class_text)}" %></br>
       <% @main_menus.each do |main_menu| %>
          <div>
            <%= f.check_box :main_menu, { multiple: true }, main_menu, nil %>
            <span><%= main_menu %></span>
          </div>
        <% end %>
      </br>

      <div class="field">
      <%= f.label :オプション予約項目, class: "label-#{yield(:class_text)}" %></br>
       <% @option_menus.each do |option_menu| %>
          <div>
            <%= f.check_box :option_menu, { multiple: true }, option_menu, nil %>
            <span><%= option_menu %></span>
          </div>
        <% end %>
      </div></br>

      <%= f.label :作業内容, class: "label-#{yield(:class_text)}" %>
      <%= f.text_area :reservation_work, class: "form-control" %></br>

      <%= f.label :訪問日, class: "label-#{yield(:class_text)}" %>
      <%= f.date_field :worked_on, class: "form-control" %></br>

      <%= f.label :作業開始時間, class: "label-#{yield(:class_text)}" %>
      <%= f.time_field :start_times, ignore_data:true, class: "form-control" %></br>


      <%= f.submit "予約を編集する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>