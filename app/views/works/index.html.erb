<script> 
  $(function() {
    setTimeout("$('.alert').fadeOut('slow')", 2500);
  });
</script> 
<div class="container fluid-box-works">
  <% flash.each do |message_type, msg| %>
    <div class="alert alert-<%= message_type %>"><%= msg %></div>
  <% end %>
</div>
<h1 class="works-title">作業内容一覧</h1>

<div align="center">
  <%= link_to "新規登録", new_work_path, class: "btn btn-success" %>
</div>

<table class="table table-bordered">
          <thead>
          <tr>
           <th>写真</th>
           <th>名前</th>
           <th>内容</th>
           <th>単価</th>
           <th></th>
         </tr>
         </thead>


       <tbody>
         <% @works.each do |work| %>
          <tr>
           <td><% if work.profile_image_id.url %>     <%= image_tag work.profile_image_id.url %>   <% end %></td>
           <td><%= work.content_name %></td>
           <td><%= work.content %></td>
           <td><%= work.content_price %>円</td>
           <td>
               <%= link_to "編集", edit_work_path(work), class: "btn btn-warning" %>
               <%= link_to "削除", "/works/#{work.id}", method: :delete, class: "btn btn-danger", data: { confirm: "作業内容を削除してよろしいですか？" } %>
           </td>
         </tr>
         <% end %>
       </tbody>
      </table>
