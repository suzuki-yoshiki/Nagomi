<% provide(:title, "作業内容 新規登録") %>

<link href="https://fonts.googleapis.com/css2?family=Sawarabi+Gothic&display=swap" rel="stylesheet">
  <div class="tool-new-body">
    <div class="container-fluid jumbotron-position">
      <h1 class="new-title">新規登録（作業内容）</h1>
        <div class="col-md-6 col-md-offset-3">
         <%= form_with(model: @work, url: works_path, local: true, method: :post) do |f| %>
           <%= render 'share/error_messages', object: @work %>
           <div class="form-group">
             <%= f.label :名前, class: "label-tool--new"%> <span class="must">必須</span>
             <%= f.text_field :content_name, :required => true, class: "form-control" %>
           </div>
           <div class="form-group">
             <%= f.label :内容, class: "label-tool--new"%> <span class="must">必須</span>
             <%= f.text_area :content, :required => true, class: "form-control" %>
           </div>
           <div class="form-group">
             <%= f.label :価格, class: "label-tool--new"%> <span class="must">必須</span>
             <%= f.number_field :content_price, :required => true, class: "form-control" %>
          </div>
          <div class="form-group">
             <%= f.label :画像, class: "label-tool--new"%> <span class="must">必須</span>
             <%= f.attachment_field :profile_image, :required => true %>
           </div>
             <%= f.submit "登録する", class: "btn btn-success" %>
         <% end %>
        </div>
      </div>
    </div>
  </div>